<?xml version="1.0" encoding="utf-8"?>
<com.qcloud.qclib.widget.customview.clearscreen.view.RelativeClearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.room.widget.RoomFragment">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_marginTop="@dimen/margin_6"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_8"
            android:layout_weight="1.5"
            android:background="@drawable/bg_black_alpha_20_circular"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.qcloud.liveshow.widget.customview.UserHeadImageView
                android:id="@+id/layout_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_1"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/micro_text_size"
                    tools:text="zz主播" />

                <TextView
                    android:id="@+id/tv_watch_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_1"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/micro_text_size"
                    tools:text="12345" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_follow"
                android:layout_width="@dimen/margin_8"
                android:layout_height="@dimen/small_btn_height"
                android:layout_marginLeft="@dimen/margin_1"
                android:layout_marginRight="@dimen/margin_1"
                android:background="@drawable/bg_orange_circular"
                android:gravity="center"
                android:text="@string/tag_follow"
                android:textColor="@color/white"
                android:textSize="@dimen/micro_text_size" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_fans"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_8"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/small_btn_height"
        android:layout_alignLeft="@+id/layout_top"
        android:layout_below="@+id/layout_top"
        android:layout_marginTop="@dimen/margin_1"
        android:background="@drawable/bg_black_alpha_20_circular"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_margin"
        android:paddingRight="@dimen/layout_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/tag_app_id"
            android:textColor="@color/white"
            android:textSize="@dimen/micro_text_size" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/micro_text_size"
            tools:text="1234" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_big_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_id"
        android:layout_marginTop="@dimen/margin_2"
        android:orientation="vertical">
        <!--<com.qcloud.liveshow.widget.customview.CustomGiftView-->
        <!--android:orientation="vertical"-->
        <!--android:id="@+id/gift"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <!--</com.qcloud.liveshow.widget.customview.CustomGiftView>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_small_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_id"
        android:layout_marginTop="@dimen/margin_90dp"
        android:orientation="vertical">
        <!--<com.qcloud.liveshow.widget.customview.CustomGiftView-->
        <!--android:orientation="vertical"-->
        <!--android:id="@+id/gift"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <!--</com.qcloud.liveshow.widget.customview.CustomGiftView>-->
    </LinearLayout>

    <ImageView
        android:id="@+id/img_gift_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/layout_notice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/room_notice_min_height"
        android:layout_above="@+id/layout_bottom"
        android:layout_marginBottom="@dimen/layout_margin"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_notice" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/small_btn_height"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/layout_margin">

                <LinearLayout
                    android:id="@+id/layout_notice_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/small_btn_height"
                    android:background="@drawable/bg_black_alpha_20_circular"
                    android:orientation="vertical" />

                <com.qcloud.qclib.widget.customview.MarqueeView
                    android:id="@+id/tv_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/small_btn_height"
                    android:layout_marginLeft="@dimen/margin_1"
                    android:layout_marginRight="@dimen/margin_1"
                    app:direction="left"
                    app:isRepeat="true"
                    app:speed="20"
                    app:startPoint="end"
                    app:textColor="@color/white"
                    app:textSize="@dimen/micro_text_size" />
            </RelativeLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/layout_margin"
        android:layout_toLeftOf="@+id/btn_exit"
        android:paddingLeft="@dimen/layout_margin"
        android:paddingRight="@dimen/layout_margin">

        <ImageView
            android:id="@+id/btn_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_send_message" />

        <ImageView
            android:id="@+id/btn_buy_diamonds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_toRightOf="@+id/btn_send_message"
            android:src="@drawable/icon_buy_diamonds" />


        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_room_share" />

        <ImageView
            android:id="@+id/btn_receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_toLeftOf="@+id/btn_share"
            android:src="@drawable/icon_receive_message" />

        <ImageView
            android:id="@+id/btn_send_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_toLeftOf="@+id/btn_receive_message"
            android:src="@drawable/icon_send_gift" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:src="@drawable/icon_exit_room" />

</com.qcloud.qclib.widget.customview.clearscreen.view.RelativeClearLayout>
