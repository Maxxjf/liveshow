<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_black_top_big_radius"
        android:layout_marginTop="@dimen/margin_6">

        <TextView
            android:id="@+id/btn_manager"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_btn_height"
            android:background="@drawable/frame_white_circular"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_marginLeft="@dimen/layout_margin"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/micro_text_size"
            android:text="@string/btn_manage"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_fans_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:text="库赞"/>

            <ImageView
                android:id="@+id/img_fans_sex"
                android:layout_width="@dimen/margin_3"
                android:layout_height="@dimen/margin_3"
                android:layout_marginLeft="@dimen/margin_1"
                android:gravity="center"
                android:src="@drawable/icon_lady"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/text_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/micro_text_size"
                android:text="@string/tag_app_id"/>

            <TextView
                android:id="@+id/tv_fans_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/micro_text_size"
                android:text="123456789"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/text_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/micro_text_size"
                android:text="@string/tag_signature"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/micro_text_size"
                android:text="@string/tag_colon"/>

            <TextView
                android:id="@+id/tv_fans_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/micro_text_size"
                android:text="我的地盘我作主"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/layout_margin"
            android:paddingTop="@dimen/layout_margin"
            android:paddingBottom="@dimen/layout_margin"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/layout_follow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="12345"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_padding"
                    android:textSize="@dimen/micro_text_size"
                    android:textColor="@color/white"
                    android:text="@string/tag_follow"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_fans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="12345"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_padding"
                    android:textSize="@dimen/micro_text_size"
                    android:textColor="@color/white"
                    android:text="@string/tag_fans"/>

            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/LineHorizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_follow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/micro_text_size"
                android:text="@string/btn_follow"/>

            <View
                style="@style/LineVertical"
                android:layout_marginTop="@dimen/margin_1"
                android:layout_marginBottom="@dimen/margin_1"/>

            <TextView
                android:id="@+id/btn_letter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/micro_text_size"
                android:text="@string/btn_letter"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <com.qcloud.qclib.widget.customview.RatioImageView
            android:id="@+id/img_user_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small"
            android:src="@drawable/bitmap_user_head"
            myapp:ratio="1"
            myapp:width="120"/>

        <ImageView
            android:id="@+id/img_anchor_level"
            android:layout_width="@dimen/margin_4"
            android:layout_height="@dimen/margin_4"
            android:gravity="center"
            android:layout_gravity="bottom|right"
            android:src="@drawable/icon_anchor_level_1"/>
    </FrameLayout>
</RelativeLayout>
