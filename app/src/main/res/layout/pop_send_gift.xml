<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_black_top_big_radius">

    <com.qcloud.liveshow.widget.customview.GiftPagerLayout
        android:id="@+id/page_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginRight="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_2"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_1"
        android:layout_marginBottom="@dimen/layout_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_btn_height"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_margin"
            android:background="@drawable/frame_orange_circular">

            <TextView
                android:id="@+id/tv_diamonds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/micro_text_size"
                android:text="50钻石币"/>

            <TextView
                android:id="@+id/btn_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_margin"
                android:paddingRight="@dimen/layout_margin"
                android:textColor="@color/colorEnd"
                android:textSize="@dimen/micro_text_size"
                android:text="@string/btn_diamonds_recharge"/>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_btn_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_margin"
            android:paddingLeft="@dimen/margin_4"
            android:paddingRight="@dimen/margin_4"
            android:background="@drawable/btn_left_right_orange_selector"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/micro_text_size"
            android:text="@string/btn_send"/>

    </RelativeLayout>
</LinearLayout>
