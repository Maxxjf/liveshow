<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBg"
    tools:context=".ui.home.widget.SearchAnchorActivity">

    <com.qcloud.liveshow.widget.toolbar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        toolbar:is_title="false"
        toolbar:title_text="@string/title_search_anchor"
        toolbar:is_right_text="true"
        toolbar:right_text="@string/btn_cancel"
        toolbar:is_search="true"/>

    <View
        style="@style/LineHorizontal"/>

    <com.qcloud.qclib.pullrefresh.PullRefreshRecyclerView
        android:id="@+id/list_search_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
