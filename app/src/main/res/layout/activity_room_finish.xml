<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myapp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorDark"
    tools:context=".ui.room.widget.RoomFinishActivity">

    <FrameLayout
        android:id="@+id/layout_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_10">

        <com.qcloud.qclib.widget.customview.RatioImageView
            android:id="@+id/img_user_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small"
            android:src="@drawable/bitmap_user_head"
            myapp:ratio="1"
            myapp:width="180"/>

        <ImageView
            android:id="@+id/img_anchor_level"
            android:layout_width="@dimen/margin_5"
            android:layout_height="@dimen/margin_5"
            android:gravity="center"
            android:layout_gravity="bottom|right"
            android:src="@drawable/icon_anchor_level_1"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2"
        android:textColor="@color/white"
        android:textSize="@dimen/xmedium_text_size"
        android:textStyle="bold"
        android:text="主播昵称"/>

