<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorBg">

        <com.qcloud.qclib.widget.indicator.FixedIndicatorView
            android:id="@+id/view_page_indicator"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin_2"/>

        <!--<ImageView-->
            <!--android:id="@+id/img_delete"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingRight="@dimen/margin_2"-->
            <!--android:src="@drawable/icon_emoji_delete"/>-->
        <TextView
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_btn_height"
            android:background="@drawable/btn_left_right_orange_radius_selector"
            android:paddingLeft="@dimen/margin_2"
            android:paddingRight="@dimen/margin_2"
            android:layout_marginRight="@dimen/margin_2"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/micro_text_size"
            android:text="@string/btn_send"/>
    </LinearLayout>
</LinearLayout>