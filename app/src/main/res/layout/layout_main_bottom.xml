<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    app:layout_behavior="@string/behavior_footer_depend">

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btn_home"
            style="@style/TabMain"
            android:contentDescription="@string/tab_home"
            android:src="@drawable/icon_home_normal"/>

        <ImageView
            style="@style/TabMain"
            android:contentDescription="@string/tab_live_show"/>

        <ImageView
            android:id="@+id/btn_mine"
            style="@style/TabMain"
            android:contentDescription="@string/tab_mine"
            android:src="@drawable/icon_mine_normal"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_live_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/tab_live_show"
        android:src="@drawable/icon_live_show"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

