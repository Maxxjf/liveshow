<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--顶部导航自定义属性-->
    <declare-styleable name="BaseBar">
        <!--是否显示左边图标-->
        <attr name="is_left" format="boolean"/>
        <!--左边图标-->
        <attr name="left_icon" format="reference"/>
        <!--是否显示左边按钮-->
        <attr name="is_left_text" format="boolean"/>
        <!--左边按钮文字-->
        <attr name="left_text" format="reference"/>
        <!--左边按钮文字颜色-->
        <attr name="left_text_color" format="color"/>
        <!--是否显示右边图标-->
        <attr name="is_right" format="boolean"/>
        <!--右边图标-->
        <attr name="right_icon" format="reference"/>
        <!--是否显示右边按钮-->
        <attr name="is_right_text" format="boolean"/>
        <!--右边按钮文字-->
        <attr name="right_text" format="reference"/>
        <!--右边按钮文字颜色-->
        <attr name="right_text_color" format="color"/>
        <!--是否显示标题文字-->
        <attr name="is_title" format="boolean"/>
        <!--标题文字-->
        <attr name="title_text" format="reference"/>
        <!--是否显示搜索框-->
        <attr name="is_search" format="boolean"/>
        <!--标题文字颜色-->
        <attr name="title_color" format="color"/>
        <!--档题背景颜色-->
        <attr name="bar_background" format="color"/>
    </declare-styleable>

    <!--Item自定义属性-->
    <declare-styleable name="ItemAttr">
        <!--item图标-->
        <attr name="item_icon" format="reference"/>
        <!--是否显示点击图标-->
        <attr name="is_item_arrow" format="boolean"/>
        <!--点击进入图标-->
        <attr name="item_arrow" format="reference"/>
        <!--item名称-->
        <attr name="item_name" format="reference"/>
        <!--item备注-->
        <attr name="item_remark" format="reference"/>
        <!--item备注文字颜色-->
        <attr name="item_remark_color" format="color"/>
        <!--档题背景颜色-->
        <attr name="item_background" format="color"/>
    </declare-styleable>

    <!--文字描边-->
    <declare-styleable name="StrokeTextView">
        <attr name="outerColor" format="color|reference" />
        <attr name="innnerColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="LeftGiftsItemLayout">
        <attr name="left_gift_layout_index" format="integer"/>
    </declare-styleable>
</resources>
