<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@null</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- application theme -->
    <style name="AppTheme" parent="@style/AppBaseTheme" />

    <!--PopupWindow 进入退出动画-->
    <style name="AnimationPopupWindow">
        <item name="android:windowEnterAnimation">@anim/pop_in_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_out_anim</item>
    </style>

    <!--PopupWindow 进入退出动画 从下到上-->
    <style name="AnimationPopupWindow_bottom_to_up">
        <item name="android:windowEnterAnimation">@anim/up_to_bottom</item>
        <item name="android:windowExitAnimation">@anim/bottom_to_up</item>
    </style>


    <!--PopupWindow 进入退出动画 从上到下-->
    <style name="AnimationPopupWindow_up_to_bottom">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <!-- EditText 样式 -->
    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/micro_text_size</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <!-- 水平分界线 -->
    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/colorGray</item>
    </style>


    <!-- 垂直分界线 -->
    <style name="LineVertical">
        <item name="android:layout_width">@dimen/line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorGray</item>
    </style>

    <!--首页底部导航栏样式-->
    <style name="TabMain">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>
