<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@null</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- application theme -->
    <style name="AppTheme" parent="@style/AppBaseTheme" />

    <!--侧滑返回主题-->
    <style name="AppSwipeBackTheme" parent="@style/AppBaseTheme" >
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--表情弹窗主题-->
    <style name="EmojiStyle" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--PopupWindow 进入退出动画-->
    <style name="AnimationPopupWindow">
        <item name="android:windowEnterAnimation">@anim/pop_in_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_out_anim</item>
    </style>

    <!-- EditText 样式 -->
    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/micro_text_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/draw_padding</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <!-- EditText 样式 -->
    <style name="ApplyEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/micro_text_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin</item>
        <item name="android:layout_marginRight">@dimen/layout_margin</item>
    </style>

    <!-- 水平分界线白色底 -->
    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/colorLineWhite</item>
    </style>

    <!-- 垂直分界线白色底 -->
    <style name="LineVertical">
        <item name="android:layout_width">@dimen/line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorLineWhite</item>
    </style>

    <!-- 水平分界线黑色底 -->
    <style name="LineHorizontalBlack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/colorLineBlack</item>
    </style>

    <!-- 垂直分界线黑色底 -->
    <style name="LineVerticalBlack">
        <item name="android:layout_width">@dimen/line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorLineBlack</item>
    </style>

    <!--首页底部导航栏样式-->
    <style name="TabMain">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!--选中样式-->
    <style name="BtnSex">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:drawablePadding">@dimen/margin_2</item>
        <item name="android:drawableLeft">@drawable/check_orange_select</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/tab_text_color</item>
        <item name="android:textSize">@dimen/micro_text_size</item>
    </style>

    <!--关注样式-->
    <style name="BtnFollow">
        <item name="android:layout_width">@dimen/margin_90dp</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/check_follow_select</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/btn_follow_text_color</item>
        <item name="android:textSize">@dimen/micro_text_size</item>
    </style>

    <style name="ScrollViewStyle">
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <!--输入消息弹窗-->
    <style name="InputDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorControlNormal">@color/colorStart</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="colorControlActivated">@color/colorStart</item>
    </style>
</resources>
