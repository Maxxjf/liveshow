<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@null</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- application theme -->
    <style name="AppTheme" parent="@style/AppBaseTheme" />

    <!-- EditText 样式 -->
    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/micro_text_size</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <!-- 水平分界线 -->
    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/colorGray</item>
    </style>


    <!-- 垂直分界线 -->
    <style name="LineVertical">
        <item name="android:layout_width">@dimen/line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorGray</item>
    </style>

</resources>
